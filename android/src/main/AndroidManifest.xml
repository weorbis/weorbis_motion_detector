<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weorbis.motion_detector">

    <!-- Required permissions (merged into the host app) -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application>
        <!-- Receives ActivityRecognition updates and forwards them to a JobIntentService -->
        <receiver android:name="com.weorbis.motion_detector.ActivityRecognizedBroadcastReceiver" />

        <!-- Handles the activity updates off the main thread -->
        <service
            android:name="com.weorbis.motion_detector.ActivityRecognizedService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- Foreground service used for continuous background monitoring -->
        <service
            android:name="com.weorbis.motion_detector.ForegroundService"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>
